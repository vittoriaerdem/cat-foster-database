
<%- include('../partials/header') %>

<section>
    <h2 id="caretakerProfile">Create a Caretaker Profile:</h2>
    <div id="newCaretakerForm">

    <form class="pure-form pure-form-aligned" action="/caretakers/index" method="POST">
        <fieldset>
            <div class="pure-control-group">
                <label for="name">Name :</label>
                <input name="name" type="text" placeholder="Name">
            </div>

            <div class="pure-control-group">    
                <label for="dob">DOB :</label>
                <input name="dob" type="date" placeholder="Date of Birth" autocomplete="off">
            </div>

            <div class="pure-control-group">
                    <label for="address">Address :</label>
                    <input name="address" type="text" placeholder="Address">
                </div>

            <div class="pure-control-group">
                <label for="email">Email :</label>
                <input name="email" type="text" placeholder="Email">
            </div>

            <div class="pure-control-group">
                    <label for="dogs">Current # of dogs :</label>
                    <input name="dogs" type="text" placeholder="# of dogs you have" autocomplete="off">
                </div>

            <div class="pure-control-group">
                    <label for="cats">Current # of cats :</label>
                    <input name="cats" type="text" placeholder="# of cats you have" autocomplete="off">
                </div>

            <div class="pure-control-group">
                <label for="photo">Photo</label>
                <input name="photo" type="text" placeholder="Photo" autocomplete="off">
            </div>
    
            <div>
                <label for="cb" class="pure-checkbox">
                    <input id="cb" type="checkbox"> I agree to provide foster cats with all food, water & litter box needs.
                </label>
                <label for="cb" class="pure-checkbox">
                        <input id="cb" type="checkbox"> I agree to take foster cats to any necessary medical appointments. 
                    </label>
    
                <button type="submit" class="btn">Submit</button>
            </div>
        </fieldset>
    </form>
</div>
</section>
<%- include('../partials/footer') %>
